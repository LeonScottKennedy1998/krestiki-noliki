<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:buttonStyle">@style/GameButtonStyle.Light</item>
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonStyle">@style/GameButtonStyle.Dark</item>
    </style>

    <style name="GameButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="GameButtonStyle.Light" parent="GameButtonStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GameButtonStyle.Dark" parent="GameButtonStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>